<div class="courses">
    <div class="events-list text-center container">
        <table class="table table-bordered ">
            <thead>
                <tr>
                    <!-- <th>Id</th> -->
                    <th>Title</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <% if (events.length> 0) { %>
                <tbody>
                    <% for(let event of events) { %>
                        <tr>
                            <!-- <td>
                                <%= event._id %>
                            </td> -->
                            <td>
                                <%= event.title %>
                            </td>
                            <td>
                                <%= event.price %>
                            </td>
                            <td>
                                <%= event.description %>
                            </td>
                            <td>
                                <a href="/events/<%= event._id %>" class="btn btn-sm mx-1 btn-dark">Add Course</a>
                                <!-- <a href="/edit/<%= event._id %>" class="btn btn-sm mx-1 btn-success">Edit</a>-->
                            <a href="/events/<%= event._id %>/delete" class="btn btn-sm mx-1 btn-dark">Delete</a> 
                            </td>
                        </tr>
                        <% } %>
                </tbody>
                <% } %>
        </table>
    </div>
</div>